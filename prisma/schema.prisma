model User {

  id           String   @id
  firstName    String
  lastName     String
  passwordHash String?
  userName     String
  indexRef     Int
  token        String?
  createdAt    DateTime @default(now())

  @@map("users")
}
model Post {

  id        String   @id
  title     String
  body      String
  userId    String
  indexRef  Int
  createdAt DateTime @default(now())

  @@map("posts")
}
model Comment {

  id        String   @id
  comment   String
  postId    String
  userId    String
  indexRef  Int
  createdAt DateTime @default(now())

  @@map("comments")
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
